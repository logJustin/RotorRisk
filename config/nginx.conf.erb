worker_processes 1;
events { worker_connections 1024; }

http {
    server {
        listen <%= ENV["PORT"] %>;

        location / {
            root <%= ENV["HOME"] %>/public;
            index index.html;
            try_files $uri $uri/ /index.html;
        }

        # Define the log files with absolute paths or create the logs directory
        error_log <%= ENV["HOME"] %>/logs/error.log;
        access_log <%= ENV["HOME"] %>/logs/access.log;
    }
}
